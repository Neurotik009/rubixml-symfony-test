{% extends 'base.html.twig' %}

{% block title %}Chatbot Vorhersage{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Chatbot Vorhersage</h1>

        <div class="row mt-4">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <form id="predict-form">
                            <div class="form-group">
                                <label for="question">Ihre Frage:</label>
                                <textarea class="form-control" id="question" rows="3" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary mt-3">Frage senden</button>
                        </form>
                    </div>
                </div>

                <div class="card mt-4">
                    <div class="card-body">
                        <h5 class="card-title">Antwort:</h5>
                        <div id="response" class="mt-3">
                            <!-- Hier wird die Antwort angezeigt -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% block javascripts %}
        <script>
            document.getElementById('predict-form').addEventListener('submit', async function(e) {
                e.preventDefault();

                const question = document.getElementById('question').value;
                const responseDiv = document.getElementById('response');

                try {
                    responseDiv.innerHTML = 'Verarbeite Anfrage...';

                    const response = await fetch('{{ path('api_chatbot_predict') }}', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            question: question
                        })
                    });

                    const data = await response.json();

                    if (data.status === 'success') {
                        responseDiv.innerHTML = `
                <div class="alert alert-success">
                    <strong>Antwort:</strong><br>
                    ${data.answer}<br><br>
                    <small>Konfidenz: ${(data.confidence * 100).toFixed(2)}%</small>
                </div>`;
                    } else {
                        responseDiv.innerHTML = `
                <div class="alert alert-danger">
                    <strong>Fehler:</strong> ${data.message}
                </div>`;
                    }
                } catch (error) {
                    responseDiv.innerHTML = `
            <div class="alert alert-danger">
                <strong>Fehler:</strong> Es ist ein Fehler aufgetreten. Bitte versuchen Sie es sp√§ter erneut.
            </div>`;
                }
            });
        </script>
    {% endblock %}
{% endblock %}
