{% extends 'base.html.twig' %}

{% block title %}Chatbot Vorhersage{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Chatbot Validation</h1>

        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <h5 class="card-title mt-1 p-2">Genauigkeite (Accuracy):</h5>
                    <div class="card-body">
                        <div class="mt-3">
                            {{ validate['accuracy']|number_format(2, '.', ',')  }} %
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <h5 class="card-title mt-1 p-2">Genauigkeite (F1 / FBEta):</h5>
                    <div class="card-body">
                        <div class="mt-3">
                            {{ validate['f1']|number_format(2, '.', ',')  }} %
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
