{% extends 'base.html.twig' %}

{% block title %}Chatbot Vorhersage{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Chatbot Validation</h1>

        <div class="card">
            <div class="col-md-8">
                <div class="card mt-4">
                    <div class="card-body">
                        <h5 class="card-title">Genauigkeite (Accuracy):</h5>
                        <div class="mt-3">
                            {{ validate['accuracy'] }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="col-md-8">
                <div class="card mt-4">
                    <div class="card-body">
                        <h5 class="card-title">Genauigkeite (F1 / FBEta):</h5>
                        <div class="mt-3">
                            {{ validate['f1'] }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
