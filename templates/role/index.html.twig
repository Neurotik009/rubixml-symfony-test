{% extends 'base.html.twig' %}

{% block title %}Rollenverwaltung{% endblock %}

{% block body %}
    <h1>Rollenverwaltung</h1>

    <a href="{{ path('app_role_new') }}" class="btn btn-primary mb-3">Neue Rolle erstellen</a>

    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Berechtigungen</th>
            <th>Aktionen</th>
        </tr>
        </thead>
        <tbody>
        {% for role in roles %}
            <tr>
                <td>{{ role.id }}</td>
                <td>{{ role.name }}</td>
                <td>
                    <ul class="list-unstyled">
                        {% for permission in role.permissions %}
                            <li>{{ permission.name }}</li>
                        {% endfor %}
                    </ul>
                </td>
                <td>
                    <a href="{{ path('app_role_edit', {'id': role.id}) }}" class="btn btn-sm btn-primary">Bearbeiten</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
